rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Only admins can upload files
      allow write: if request.auth != null
        && request.auth.token.role == 'admin';

      // Authenticated users can download files
      allow read: if request.auth != null;
    }
  }
}
